AddDefaultCharset Off

# Redirects for specific pages
Redirect 302 /gril https://www.facebook.com/events/289367685351792/
Redirect 302 /prihlaska https://forms.gle/89D5aMpFVgVYETvg9
Redirect 302 /contact https://zverinec.fi.muni.cz/#kontakty

# Rewriting: Add .html to URLs
RewriteEngine On
RewriteCond %{REQUEST_URI} !\.[a-zA-Z0-9]{3,4}
RewriteCond %{REQUEST_URI} !/$
RewriteCond %{REQUEST_URI} !\.(html|css|jpg|png|gif|pdf)$
RewriteRule ^(.*)$ $1.html

ErrorDocument 404 /404.html
